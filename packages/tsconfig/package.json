{
  "name": "@package/tsconfig",
  "version": "0.1.0",
  "private": true,
  "description": "> TODO: description",
  "license": "MIT",
  "main": "tsconfig.json",
  "files": [
    "bin.json",
    "lib.json",
    "node.json",
    "tsconfig.json",
    "web.json",
    "web-lib.json"
  ],
  "scripts": {
    "fmt": "prettier",
    "fmt:all": "yarn fmt .",
    "fmt:all:check": "yarn fmt:all --check",
    "fmt:all:write": "yarn fmt:all --write",
    "fmt:diff": "pretty-quick",
    "fmt:diff:check": "yarn fmt:diff --check",
    "fmt:diff:write": "yarn fmt:diff",
    "lint": "yarn lint:md",
    "lint:all": "yarn lint:md:all",
    "lint:diff": "yarn lint:md:diff",
    "lint:md": "markdownlint",
    "lint:md:all": "yarn lint:md \"**/*.md\"",
    "lint:md:diff": "yarn lint:md:all",
    "precommit": "lint-staged"
  },
  "peerDependencies": {
    "typescript": ">=3.8.2"
  },
  "devDependencies": {
    "lint-staged": "10.4.0",
    "markdownlint-cli": "0.24.0",
    "prettier": "2.1.2",
    "pretty-quick": "3.0.2"
  }
}
