{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/jdanil/skunkworks",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdanil/skunkworks.git"
  },
  "bugs": {
    "url": "https://github.com/jdanil/skunkworks/issues"
  },
  "engines": {
    "node": "^14 || ^16 || >=18",
    "yarn": ">=3"
  },
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "applications/*",
    "components/*",
    "configs/*",
    "libraries/*",
    "plugins/*",
    "services/*",
    "templates/*"
  ],
  "scripts": {
    "audit-ci": "audit-ci --config .auditcirc.json",
    "commit": "cz",
    "postinstall": "[ -n ${CI:-} ] || husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@commitlint/prompt": "17.4.2",
    "@package/markdownlint-config": "workspace:*",
    "@package/prettier-config": "workspace:*",
    "audit-ci": "6.6.0",
    "commitizen": "4.3.0",
    "husky": "8.0.3",
    "libyear": "0.8.0",
    "lint-staged": "12.1.7",
    "markdownlint-cli": "0.33.0",
    "prettier": "2.8.3"
  },
  "resolutions": {
    "brotli-size": "^4.0.0"
  },
  "scarfSettings": {
    "enabled": false
  }
}
