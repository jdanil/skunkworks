{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/jdanil/template",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdanil/template.git"
  },
  "bugs": {
    "url": "https://github.com/jdanil/template/issues"
  },
  "engines": {
    "node": "^10.13 || ^12 || ^13",
    "yarn": "^1.17.1"
  },
  "workspaces": [
    "applications/*",
    "components/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "audit-ci": "audit-ci --config .auditcirc.json",
    "build": "lerna run build",
    "commitlint": "commitlint",
    "commitizen": "git-cz",
    "compile": "lerna run compile",
    "libyear": "libyear",
    "lint": "lerna run lint",
    "lint:all": "lerna run lint:all",
    "lint:diff": "lerna run lint:diff",
    "release": "lerna publish",
    "test": "lerna run test",
    "test:ci": "lerna run test",
    "test:ci:branch": "lerna run test:ci:branch"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "audit-ci": "2.5.1",
    "commitizen": "4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "husky": "4.2.3",
    "lerna": "3.20.2",
    "libyear": "0.4.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
