{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/jdanil/template",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdanil/template.git"
  },
  "engines": {
    "node": "^12.1.0",
    "yarn": "^1.17.1"
  },
  "workspaces": [
    "applications/*",
    "components/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "audit": "audit-ci --high",
    "build": "lerna run build --stream",
    "commitlint": "commitlint",
    "compile": "lerna run compile --stream",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "commitizen": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "audit-ci": "2.4.2",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "4.0.10",
    "lerna": "3.20.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
