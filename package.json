{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/jdanil/skunkworks",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdanil/skunkworks.git"
  },
  "bugs": {
    "url": "https://github.com/jdanil/skunkworks/issues"
  },
  "engines": {
    "node": "^20 || ^22 || >=24",
    "yarn": ">=4"
  },
  "packageManager": "yarn@4.10.0",
  "workspaces": [
    "applications/*",
    "components/*",
    "configs/*",
    "libraries/*",
    "plugins/*",
    "services/*",
    "templates/*"
  ],
  "scripts": {
    "audit-ci": "audit-ci --config .auditcirc.json",
    "commit": "cz",
    "postinstall": "[ -n ${CI:-} ] || husky",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/prompt": "19.8.1",
    "@package/markdownlint-config": "workspace:*",
    "@package/prettier-config": "workspace:*",
    "audit-ci": "7.1.0",
    "commitizen": "4.3.1",
    "husky": "9.1.7",
    "libyear": "0.9.3",
    "lint-staged": "12.1.7",
    "markdownlint-cli": "0.45.0",
    "prettier": "3.6.2"
  },
  "resolutions": {
    "brotli-size": "^4.0.0"
  },
  "scarfSettings": {
    "enabled": false
  }
}
