{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/jdanil/skunkworks",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdanil/skunkworks.git"
  },
  "bugs": {
    "url": "https://github.com/jdanil/skunkworks/issues"
  },
  "engines": {
    "node": "^14 || >=16",
    "yarn": ">=3"
  },
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "applications/*",
    "components/*",
    "configs/*",
    "libraries/*",
    "plugins/*",
    "services/*",
    "templates/*"
  ],
  "scripts": {
    "audit-ci": "audit-ci --config .auditcirc.json",
    "commit": "cz",
    "postinstall": "[ -n ${CI:-} ] || husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@commitlint/prompt": "16.2.1",
    "@package/markdownlint-config": "workspace:*",
    "@package/prettier-config": "workspace:*",
    "audit-ci": "6.1.0",
    "commitizen": "4.2.4",
    "husky": "7.0.4",
    "libyear": "0.7.0",
    "lint-staged": "12.1.7",
    "markdownlint-cli": "0.31.1",
    "prettier": "2.6.0"
  },
  "resolutions": {
    "brotli-size": "^4.0.0"
  },
  "scarfSettings": {
    "enabled": false
  }
}
