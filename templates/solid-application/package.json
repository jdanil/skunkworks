{
  "name": "@application/solid-application",
  "version": "0.1.0",
  "private": true,
  "description": "> TODO: description",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdanil/skunkworks.git",
    "directory": "templates/solid-application"
  },
  "main": "dist/index.js",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "scripts": {
    "build": "webpack --config webpack/config/production.ts --disable-interpret",
    "build:development:test": "webpack configtest webpack/config/development.ts --disable-interpret",
    "build:production:test": "webpack configtest webpack/config/production.ts --disable-interpret",
    "bundlesize": "bundlesize",
    "clean": "run-p 'clean:*'",
    "clean:test": "yarn test --clearCache",
    "clean:tsc": "yarn compile --clean",
    "clean:webpack": "rimraf dist",
    "compile": "tsc --build --stopBuildOnErrors",
    "format": "prettier --cache",
    "format:all": "yarn format .",
    "format:all:check": "yarn format:all --check",
    "format:all:write": "yarn format:all --write",
    "format:diff": "pretty-quick",
    "format:diff:check": "yarn format:diff --check",
    "format:diff:write": "yarn format:diff",
    "lint": "run-s lint:es lint:md",
    "lint:all": "run-s 'lint:*:all'",
    "lint:diff": "run-s 'lint:*:diff'",
    "lint:es": "eslint --cache --cache-strategy=content",
    "lint:es:all": "yarn lint:es \"**/*\"",
    "lint:es:diff": "FILES=$(git diff --diff-filter=ACMRTUB --name-only --relative master); [ -z ${FILES} ] || yarn lint:es --no-error-on-unmatched-pattern ${FILES}",
    "lint:md": "markdownlint",
    "lint:md:all": "yarn lint:md \"**/*.md\"",
    "lint:md:diff": "FILES=$(git diff --diff-filter=ACMRTUB --name-only --relative master); [ -z ${FILES} ] || yarn lint:md:all",
    "playwright": "playwright test",
    "playwright:branch": "yarn playwright --only-changed master --pass-with-no-tests",
    "precommit": "lint-staged",
    "prepack": "yarn build",
    "start": "yarn start:development",
    "start:development": "webpack serve --config webpack/config/development.ts --disable-interpret",
    "start:production": "webpack serve --config webpack/config/production.ts --disable-interpret",
    "test": "yarn compile && jest --config .jestrc.json",
    "test:ci": "yarn test --ci",
    "test:ci:branch": "yarn test:ci --changedSince master"
  },
  "dependencies": {
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@jest/globals": "30.2.0",
    "@package/eslint-config": "workspace:*",
    "@package/jest-config": "workspace:*",
    "@package/markdownlint-config": "workspace:*",
    "@package/prettier-config": "workspace:*",
    "@package/tsconfig": "workspace:*",
    "@playwright/test": "1.56.1",
    "@solidjs/testing-library": "0.8.10",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.11",
    "babel-jest": "30.2.0",
    "babel-loader": "10.0.0",
    "babel-preset-solid": "1.9.9",
    "bundlesize": "0.18.2",
    "css-loader": "7.1.2",
    "eslint": "8.57.0",
    "fork-ts-checker-webpack-plugin": "9.1.0",
    "html-webpack-plugin": "5.6.4",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-extended": "6.0.0",
    "jest-util": "30.2.0",
    "jest-when": "3.7.0",
    "lint-staged": "12.1.7",
    "markdownlint-cli": "0.45.0",
    "mini-css-extract-plugin": "2.9.4",
    "msw": "2.11.6",
    "npm-run-all": "4.1.5",
    "postcss": "8.5.6",
    "postcss-loader": "8.2.0",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "rimraf": "6.0.1",
    "style-loader": "4.0.0",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2",
    "webpack-merge": "6.0.1"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
