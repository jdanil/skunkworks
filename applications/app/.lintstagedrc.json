{
  "*": [
    "eslint --cache --cache-strategy=content --fix",
    "prettier --cache --write"
  ],
  "*.{[cm]js,[jt]s?(x)}": [
    "yarn test --bail --findRelatedTests --passWithNoTests"
  ],
  "*.md": ["markdownlint --fix"],
  "webpack/**/*": ["yarn build:development:test", "yarn build:production:test"]
}
