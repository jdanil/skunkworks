{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish",
      "yes": true
    },
    "run": {
      "stream": true
    }
  },
  "packages": [
    "applications/*",
    "components/*",
    "configs/*",
    "libraries/*",
    "plugins/*",
    "services/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
